<!-- views/admin/users.hbs -->
<div class="dashboard">
    {{!-- Include Shared Sidebar --}}
    {{> admin-sidebar}}

    {{!-- Main Content --}}
    <main class="dashboard__main">
        <div class="admin-users">
            {{!-- Header --}}
            <div class="admin-users__header">
                <h1 class="admin-users__title">Users Management</h1>
                <div class="admin-users__actions">
                    <div class="admin-users__search">
                        <input type="text" placeholder="Search users..." class="admin-users__search-input">
                        <i class="fas fa-search"></i>
                    </div>
                    <button class="btn btn--primary">
                        <i class="fas fa-plus"></i> Add User
                    </button>
                </div>
            </div>

            {{!-- Users Table --}}
            <div class="admin-users__table-wrapper">
                <table class="admin-users__table">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Followers</th>
                            <th>Following</th>
                            <th>Joined Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                        <tr>
                            <td>
                                <div class="admin-users__user">
                                    <img src="{{this.profile_picture}}" alt="{{this.username}}" class="admin-users__avatar">
                                    <div class="admin-users__user-info">
                                        <span class="admin-users__name">{{this.first_name}} {{this.last_name}}</span>
                                        <span class="admin-users__username">@{{this.last_name}}</span>
                                    </div>
                                </div>
                            </td>
                            <td>{{this.email}}</td>
                            <td>
                                <span class="admin-users__role {{this.role}}">{{this.role}}</span>
                            </td>
                            <td>
                                <span class="admin-users__followers {{this.followers.length}}">{{this.followers.length}}</span>
                            </td>
                            <td>
                                <span class="admin-users__following {{this.following.length}}">{{this.following.length}}</span>
                            </td>
                            <td>{{formatDate this.created_at}}</td>
                            <td>
                                <div class="admin-users__actions">
                                    <button class="admin-users__action-btn" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="admin-users__action-btn" title="Delete">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

            {{!-- Pagination --}}
            <div class="admin-users__pagination">
                <button class="admin-users__pagination-btn" {{#unless hasPrevPage}}disabled{{/unless}}>
                    <i class="fas fa-chevron-left"></i>
                </button>
                <span class="admin-users__pagination-info">
                    Page {{currentPage}} of {{totalPages}}
                </span>
                <button class="admin-users__pagination-btn" {{#unless hasNextPage}}disabled{{/unless}}>
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </div>
    </main>
</div>