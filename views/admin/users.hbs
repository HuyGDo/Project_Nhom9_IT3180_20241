<!-- views/admin/users.hbs -->
<h1>Users List</h1>
<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Email</th>
            <th>Name</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
        <tr>
            <td>{{@index}}</td>
            <td>{{this.email}}</td>
            <td>{{this.first_name}} {{this.last_name}}</td>
            <td>{{this.role}}</td>
            <td>
                <form action="/admin/users/{{this._id}}?_method=DELETE" method="POST">
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>