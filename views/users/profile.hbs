<!-- filepath: views/users/profile.hbs -->

<main class="profile">
    <div class="container">
        <div class="profile__container">
            {{!-- Header Section --}}
            <div class="profile__header">
                <div class="profile__avatar">
                    <img
                        src="{{#if profileUser.profile_picture}}{{
                            profileUser.profile_picture
                        }}{{else}}/assets/img/avatar.jpg{{/if}}"
                        alt="{{ profileUser.first_name }}'s avatar"
                    />
                </div>
                <div class="profile__info">
                    <h1 class="profile__name">
                        {{ profileUser.first_name }} {{ profileUser.last_name }}
                    </h1>
                    <p class="profile__username">@{{ profileUser.username }}</p>

                    {{!-- Show different buttons based on if it's the current user's profile --}}
                    {{#if isOwnProfile}}
                    <div class="profile__actions">
                        <a href="/users/me/edit-profile" class="btn btn--primary">Edit Profile</a>
                        <a href="/recipes/create" class="btn btn--outline">Create Recipe</a>
                    </div>
                    {{else}}
                    {{#if isAuthenticated}}
                    {{#if isFollowing}}
                    <button
                        onclick="handleFollowAction('unfollow', '{{ profileUser._id }}')"
                        class="btn btn--outline profile__follow-btn"
                    >
                        Unfollow
                    </button>
                    {{else}}
                    <button
                        onclick="handleFollowAction('follow', '{{ profileUser._id }}')"
                        class="btn btn--primary profile__follow-btn"
                    >
                        Follow
                    </button>
                    {{/if}}
                    {{else}}
                    <a href="/sign-in" class="btn btn--primary profile__follow-btn">Follow</a>
                    {{/if}}
                    {{/if}}
                </div>
            </div>

            {{!-- Stats Section --}}
            <div class="profile__stats">
                <div class="profile__stat-item">
                    <span class="profile__stat-value">{{ profileUser.followers.length }}</span>
                    <span class="profile__stat-label">Followers</span>
                </div>
                <div class="profile__stat-item">
                    <span class="profile__stat-value">{{ profileUser.following.length }}</span>
                    <span class="profile__stat-label">Following</span>
                </div>
                <div class="profile__stat-item">
                    <span class="profile__stat-value">{{ recipes.length }}</span>
                    <span class="profile__stat-label">Recipes</span>
                </div>
            </div>

            {{!-- Content Section --}}
            <div class="profile__content">
                <div class="profile__main">
                    <h2 class="profile__section-title">
                        {{#if isOwnProfile}}My Recipes{{else}}Recent Recipes{{/if}}
                    </h2>
                    <div class="profile__recipes">
                        {{#if recipes.length}}
                        {{#each recipes}}
                        <div class="recipe-card">
                            <div class="recipe-card__img-wrap">
                                <a href="/recipes/{{ this.slug }}">
                                    {{#if this.image}}
                                    <img
                                        src="{{ this.image }}"
                                        class="recipe-card__thumb"
                                        alt="{{ this.title }}"
                                    />
                                    {{else}}
                                    <img
                                        src="/assets/img/recipe-placeholder.jpg"
                                        class="recipe-card__thumb"
                                        alt="{{ this.title }}"
                                    />
                                    {{/if}}
                                </a>
                            </div>
                            <div class="recipe-card__content">
                                <h3 class="recipe-card__title">
                                    <a href="/recipes/{{ this.slug }}">{{ this.title }}</a>
                                </h3>

                                <div class="recipe-card__meta">
                                    <div class="recipe-card__stats">
                                        <span class="recipe-card__stat">
                                            <i class="fas fa-thumbs-up"></i>
                                            {{ this.votes.upvotes }}
                                        </span>
                                        <span class="recipe-card__stat">
                                            <i class="fas fa-eye"></i>
                                            {{ this.views }}
                                        </span>
                                        <span class="recipe-card__stat">
                                            <i class="fas fa-clock"></i>
                                            {{formatDate this.createdAt}}
                                        </span>
                                    </div>
                                </div>

                                <p class="recipe-card__desc">{{ this.description }}</p>

                                <div class="recipe-card__actions">
                                    <a
                                        href="/recipes/{{ this.slug }}"
                                        class="btn btn--primary recipe-card__btn"
                                    >
                                        View
                                    </a>
                                    {{#if ../isOwnProfile}}
                                    <a
                                        href="/recipes/{{ this.slug }}/edit"
                                        class="btn btn--outline recipe-card__btn"
                                    >
                                        Edit
                                    </a>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                        {{/each}}
                        {{else}}
                        <p class="profile__empty">
                            {{#if isOwnProfile}}
                            You haven't created any recipes yet
                            {{else}}
                            No recipes yet
                            {{/if}}
                        </p>
                        {{/if}}
                    </div>
                </div>
                <div class="profile__sidebar">
                    <h2 class="profile__section-title">About</h2>
                    <p class="profile__bio">
                        {{#if profileUser.bio}}{{ profileUser.bio }}{{else}}No bio yet{{/if}}
                    </p>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="/js/userActions.js"></script>
