<!-- views/me/user-info.hbs -->
<main class="profile">
    <div class="container">
        <div class="profile__container">
            {{!-- Header Section --}}
            <div class="profile__header">
                <div class="profile__avatar">
                    <img
                        src="{{#if user.profile_picture}}{{
                            user.profile_picture
                        }}{{else}}/assets/img/avatar.jpg{{/if}}"
                        alt="Profile Picture"
                    />
                </div>
                <div class="profile__info">
                    <h1 class="profile__name">{{ user.first_name }} {{ user.last_name }}</h1>
                    <p class="profile__username">@{{ user.username }}</p>
                    <div class="profile__actions">
                        <a href="/users/me/edit-profile" class="btn btn--primary">Edit Profile</a>
                        <a href="/recipes/create" class="btn btn--outline">Create Recipe</a>
                        <button
                            class="btn btn--danger"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteAccountModal"
                        >
                            Delete Account
                        </button>
                        <a href="/log-out" class="btn btn--outline">Logout</a>
                    </div>
                </div>
            </div>

            {{!-- Stats Section --}}
            <div class="profile__stats">
                <a href="/users/me/followers" class="profile__stat-item">
                    <span class="profile__stat-value">{{ user.followers.length }}</span>
                    <span class="profile__stat-label">Followers</span>
                </a>
                <a href="/users/me/following" class="profile__stat-item">
                    <span class="profile__stat-value">{{ user.following.length }}</span>
                    <span class="profile__stat-label">Following</span>
                </a>
                <a href="/users/me/stored/recipes" class="profile__stat-item">
                    <span class="profile__stat-value">{{ myRecipes.length }}</span>
                    <span class="profile__stat-label">Recipes</span>
                </a>
            </div>

            {{!-- Content Section --}}
            <div class="profile__content">
                <div class="profile__main">
                    <h2 class="profile__section-title">My Recipes</h2>
                    <div class="profile__recipes">
                        {{#each (limit myRecipes 2)}}
                        <div class="col">
                            {{>recipe-card}}
                        </div>
                        {{/each}}
                    </div>
                    <a href="/users/me/stored/recipes" class="btn btn--outline"
                        >See all {{ user.first_name }} {{ user.last_name }}'s recipes</a
                    >
                </div>
                <div class="profile__sidebar">
                    <div class="profile__section">
                        <h2 class="profile__section-title">Account Info</h2>
                        <div class="profile__info-list">
                            <div class="profile__info-item">
                                <span class="profile__info-label">Email</span>
                                <span class="profile__info-value">{{ user.email }}</span>
                            </div>
                            <div class="profile__info-item">
                                <span class="profile__info-label">Member Since</span>
                                <span
                                    class="profile__info-value"
                                    >{{formatDate user.created_at}}</span
                                >
                            </div>
                            <div class="profile__info-item">
                                <span class="profile__info-label">Bio</span>
                                <span class="profile__info-value">{{ user.bio }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{!-- Delete Account Modal --}}
    <div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Account</h5>
                    <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"
                    ></button>
                </div>
                <div class="modal-body">
                    <p>
                        Are you sure you want to delete your account? This action cannot be undone.
                    </p>
                    <ul class="text-danger">
                        <li>All your recipes will be deleted</li>
                        <li>Your profile information will be permanently removed</li>
                        <li>You will be logged out immediately</li>
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn--outline" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <form action="/users/me/delete-account" method="POST" style="display: inline">
                        <button type="submit" class="btn btn--danger">Delete Account</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
