<main class="container home">
    <div class="home__container">
        <div class="slider">
            <div class="slider__list">
                <div class="slider__item">
                    <img
                        id="slider-1"
                        src="https://plus.unsplash.com/premium_photo-1710108920120-b4c0463bb82d?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                        alt=""
                        class="slider__img"
                    />
                </div>

                <div class="slider__item">
                    <img
                        id="slider-2"
                        src="https://images.unsplash.com/photo-1432139555190-58524dae6a55?q=80&w=1476&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                        alt=""
                        class="slider__img"
                    />
                </div>

                <div class="slider__item">
                    <img
                        id="slider-3"
                        src="https://images.unsplash.com/31/RpgvvtYAQeqAIs1knERU_vegetables.jpg?q=80&w=1475&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                        alt=""
                        class="slider__img"
                    />
                </div>
            </div>

            {{!-- Slider prev next buttons --}}
            <div class="slider__btn-wrapper">
                <button id="prev" class="slider__btn">
                    <img src="./assets/icons/arrow-left.svg" alt="" class="slider__btn-img" />
                </button>
                <button id="next" class="slider__btn">
                    <img src="./assets/icons/arrow-right.svg" alt="" class="slider__btn-img" />
                </button>
            </div>

            {{!-- Dots --}}
            <ul class="slider__dots">
                <li class="slider__dot active"></li>
                <li class="slider__dot"></li>
                <li class="slider__dot"></li>
            </ul>
        </div>
    </div>

    {{!-- Trending recipes section --}}
    <section class="home__container">
        <div class="home__row">
            <h2 class="home__heading">Trending Recipes</h2>
            <a href="./recipes">See more</a>
        </div>
        <div class="row row-cols-4 gy-3">
            {{#each trendingRecipes}}
            <div class="col">
                <div class="recipe-card">
                    {{#if image}}
                    <img src="{{image}}" alt="{{title}}" class="recipe-card__img">
                    {{else}}
                    <img src="/assets/img/default-recipe.jpg" alt="Default" class="recipe-card__img">
                    {{/if}}
                    <div class="recipe-card__content">
                        <h3 class="recipe-card__title">{{title}}</h3>
                        <p class="recipe-card__desc">{{description}}</p>
                        <div class="recipe-card__votes">
                            <span class="vote-item">
                                <i class="fas fa-arrow-up text-success"></i> {{votes.upvotes}}
                            </span>
                            <span class="vote-item">
                                <i class="fas fa-arrow-down text-danger"></i> {{votes.downvotes}}
                            </span>
                            <span class="vote-score bg-primary">{{votes.score}}</span>
                        </div>
                        <a href="/recipes/{{slug}}" class="recipe-card__btn">See details</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
</main>

<style>
.recipe-card {
    background: #f8f9fa;
    border-radius: 12px;
    padding: 0;
    height: 100%;
}

.recipe-card__img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 12px 12px 0 0;
}

.recipe-card__content {
    padding: 16px;
}

.recipe-card__title {
    font-size: 16px;
    font-weight: 600;
    color: #212529;
    margin-bottom: 8px;
}

.recipe-card__desc {
    font-size: 14px;
    color: #6c757d;
    margin-bottom: 16px;
}

.recipe-card__votes {
    display: flex;
    align-items: center;
    gap: 8px;
    margin: 8px 0;
}

.vote-item {
    display: flex;
    align-items: center;
    gap: 4px;
    color: #4a5568;
}

.vote-score {
    background: #0d6efd;
    color: white;
    padding: 2px 8px;
    border-radius: 4px;
}

.recipe-card__btn {
    display: block;
    width: 100%;
    padding: 12px;
    background: #ffc107;
    color: #000;
    text-align: center;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 500;
}

.home__heading {
    font-size: 24px;
    font-weight: 600;
    color: #212529;
}

.home__row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
}
</style>
