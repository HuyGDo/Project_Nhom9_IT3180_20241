<div class="container">
    <h1>Edit Recipe</h1>
    <form method="POST" action="/recipes/{{ recipe._id }}?_method=PUT" class="form">
        <div class="form__group">
            <div class="form__text-input">
                <label for="title" class="form__label">title</label>
                <input
                    type="text"
                    name="title"
                    value="{{ recipe.title }}"
                    id="title"
                    class="form__input"
                    placeholder="Title"
                />
            </div>
        </div>

        <div class="form__group">
            <div class="form__text-input">
                <label for="description" class="form__label">Description</label>
                <textarea
                    name="description"
                    id="description"
                    class="form__input"
                    placeholder="Description"
                >
                    {{ recipe.description }}
                </textarea>
            </div>
        </div>
        <button type="submit" class="btn btn--primary">Save recipe</button>
    </form>
</div>
