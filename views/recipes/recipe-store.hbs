<main class="recipe-browse">
    <div class="container">
        {{!-- Header --}}
        <div class="recipe-browse__header">
            <div>
                <h1 class="recipe-browse__title">My Recipes</h1>
                <p class="recipe-browse__subtitle">Manage and organize your recipes</p>
            </div>
            <a href="/recipes/create" class="btn btn--primary recipe-browse__create-btn">
                <i class="fas fa-plus"></i>
                Create Recipe
            </a>
        </div>

        <div class="row">
            {{!-- Filter column --}}
            <div class="col-lg-3">
                <div class="recipe-browse__filter">
                    <h3 class="recipe-browse__filter-heading">Filter</h3>

                    {{!-- Status --}}
                    <div class="recipe-browse__filter-section">
                        <h4 class="recipe-browse__filter-title">Status</h4>
                        <div class="recipe-browse__filter-list">
                            <label class="recipe-browse__filter-item">
                                <input type="checkbox" name="status" value="published" />
                                Published
                            </label>
                            <label class="recipe-browse__filter-item">
                                <input type="checkbox" name="status" value="draft" />
                                Draft
                            </label>
                        </div>
                    </div>

                    {{!-- Date --}}
                    <div class="recipe-browse__filter-section">
                        <h4 class="recipe-browse__filter-title">Date</h4>
                        <div class="recipe-browse__filter-list">
                            <label class="recipe-browse__filter-item">
                                <input type="checkbox" name="date" value="last-week" />
                                Last Week
                            </label>
                            <label class="recipe-browse__filter-item">
                                <input type="checkbox" name="date" value="last-month" />
                                Last Month
                            </label>
                            <label class="recipe-browse__filter-item">
                                <input type="checkbox" name="date" value="last-year" />
                                Last Year
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            {{!-- Recipes grid --}}
            <div class="col-lg-9">
                <div class="row row-cols-2 gy-4">
                    {{#each recipes}}
                    {{> recipe-card-store}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

    {{!-- Delete Modal --}}
    <div id="delete-recipe-modal" class="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Recipe</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>
                        Are you sure you want to delete this recipe? This action cannot be undone.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn--outline" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button id="btn-delete-recipe" type="button" class="btn btn--danger">
                        Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
</main>

{{!-- Delete hidden form --}}
<form name="delete-recipe-form" method="POST"></form>

<script>
    const deleteModal = document.getElementById("delete-recipe-modal");
    const deleteForm = document.forms["delete-recipe-form"];
    const btnDeleteRecipe = document.getElementById("btn-delete-recipe");
    let recipeId;

    if (deleteModal) {
        deleteModal.addEventListener("show.bs.modal", (event) => {
            const button = event.relatedTarget;
            recipeId = button.getAttribute("data-bs-id");
        });
    }

    btnDeleteRecipe.onclick = function () {
        deleteForm.action = "/recipes/" + recipeId + "?_method=DELETE";
        deleteForm.submit();
    };
</script>
