    background: #f0f0f0;
}

.vote-btn.voted {
    background: #e0e0e0;
    border-color: #999;
}

.upvote-btn.voted {
    color: #2ecc71;
}

.downvote-btn.voted {
    color: #e74c3c;
}

.vote-btn.loading {
    opacity: 0.7;
    cursor: not-allowed;
    pointer-events: none;
}
</style>
