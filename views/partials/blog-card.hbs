<div class="blog-card">
    <div class="blog-card__img-wrap">
        <a href="/blogs/{{ this.slug }}">
            {{#if this.image}}
            <img src="{{ this.image }}" class="blog-card__thumb" alt="{{ this.title }}" />
            {{else}}
            <img
                src="/assets/img/blog-placeholder.jpg"
                class="blog-card__thumb"
                alt="{{ this.title }}"
            />
            {{/if}}
        </a>
        <span class="blog-card__category">{{ this.category }}</span>
    </div>

    <div class="blog-card__content">
        <h3 class="blog-card__title">
            <a href="/blogs/{{ this.slug }}">{{ this.title }}</a>
        </h3>

        <div class="blog-card__meta">
            <a href="/users/{{ this.author._id }}" class="blog-card__author">
                <img
                    src="{{#if this.author.profile_picture}}{{
                        this.author.profile_picture
                    }}{{else}}/assets/img/avatar.jpg{{/if}}"
                    alt="{{ this.author.first_name }}"
                />
                <span>{{ this.author.first_name }} {{ this.author.last_name }}</span>
            </a>
            <div class="blog-card__stats">
                <span class="blog-card__stat">
                    <i class="fas fa-thumbs-up"></i>
                    {{ this.votes.upvotes }}
                </span>
                <span class="blog-card__stat">
                    <i class="fas fa-eye"></i>
                    {{ this.views }}
                </span>
                <span class="blog-card__stat">
                    <i class="fas fa-clock"></i>
                    {{ this.readTime }} min read
                </span>
            </div>
        </div>

        <p class="blog-card__desc">{{ this.description }}</p>

        <div class="blog-card__tags">
            {{#each this.tags}}
            <span class="blog-card__tag">{{ this }}</span>
            {{/each}}
        </div>
    </div>
</div>
