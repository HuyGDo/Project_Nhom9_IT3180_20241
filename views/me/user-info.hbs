<!-- views/me/user-info.hbs -->
<main class="profile">

    <!-- User Info Section -->
    <section class="profile__info-container">
        <h2>User Information</h2>
        <div class="profile__avatar-section">
            <img 
                src="{{#if user.profile_picture}}{{user.profile_picture}}{{else}}/assets/img/default-avatar.png{{/if}}" 
                alt="Profile Picture" 
                class="profile__avatar" 
            />
        </div>
        <div class="profile__details">
            <p><strong>First Name:</strong> {{user.first_name}}</p>
            <p><strong>Last Name:</strong> {{user.last_name}}</p>
            <p><strong>Username:</strong> {{user.username}}</p>
            <p><strong>Email:</strong> {{user.email}}</p>
            <p><strong>Follower Count:</strong> {{followerCount}}</p>
            <p><strong>Following Count:</strong> {{followingCount}}</p>
        </div>
        <div class="profile__actions">
            <a href="/users" class="btn btn--secondary">See more</a>
            <a href="/me/edit-profile" class="btn btn--primary">Edit Profile</a>
            <a href="/log-out" class="btn btn--secondary">Logout</a>
        </div>
    </section>

    <!-- Recipe Section -->
    <section class="profile__recipes-container">
        <h2>My Recipes</h2>
        <ul>
            {{#each myRecipes}}
                <li>
                    {{this.title}}
                    <a href="/recipes/{{this.slug}}" class="btn btn--primary">
                        View
                    </a>
                </li>
            {{/each}}
        </ul>
    </section>

</main>
